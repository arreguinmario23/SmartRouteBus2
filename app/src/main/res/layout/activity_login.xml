<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/fondo1"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@mipmap/logo"
        android:layout_marginBottom="30dp"
        />
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/correo"
         android:hint="Correo Electronico"
         android:drawableLeft="@drawable/ic_correo"
         android:drawableTint="@color/black"
         android:textColor="#0f97a1"
         android:layout_marginBottom="20dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:background="@drawable/input"
         android:paddingLeft="20dp"
         android:paddingRight="10dp"
         android:paddingTop="10dp"
         android:textColorHint="#0f97a1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contraseña"
            android:hint="Contraseña"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawableTint="@color/black"
            android:textColor="#0f97a1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#0f97a1"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btn_comenzar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_comenzar"
            android:text="Comenzar"
            android:drawableBottom="@drawable/ic_comenzar"
            android:drawableTint="@color/white"
            android:textColor="#fff"
            android:textSize="16sp"
            android:elevation="5dp"/>
    </LinearLayout>
</RelativeLayout>